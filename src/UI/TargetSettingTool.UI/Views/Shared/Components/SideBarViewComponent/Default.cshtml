@model IEnumerable<TargetSettingTool.UI.Models.SideBar.SideBar>

@{
    Console.WriteLine(Model);
    string role = ViewBag.Name; 
    
}

<div>
    <div class="offcanvas offcanvas-start off-canvas-sidebar" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
