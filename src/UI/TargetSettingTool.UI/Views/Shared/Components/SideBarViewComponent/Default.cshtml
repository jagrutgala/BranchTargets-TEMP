                        {
                            if (parentMenus.Contains(parent.Menu.Name))
                            {
                                if (parent.SubMenus.Count() == 0)
                                {
                                    <ul class="list-unstyled ps-0">
                                        <li class="mx-auto"><a href="@parent.Menu.Url" class="link-dark text-white rounded px-3 text-decoration-none">@parent.Menu.Name</a></li>
                                    </ul>
                                }
                                else
                                {
                                    string collapseId = $"{parent.Menu.Name}-collapse";
                                    <ul class="list-unstyled ps-0">
                                        <li class="mb-1">
                                            <button class="btn btn-toggle align-items-center rounded collapsed text-white" data-bs-toggle="collapse"
                                data-bs-target="#@collapseId" aria-expanded="true">
                                                @parent.Menu.Name
                                            </button>
                                            <div class="collapse" id="@collapseId">

                                                @foreach (Menu child in parent.SubMenus)
