@model IEnumerable<TargetSettingTool.UI.Models.Parameter.ParameterVm>

@{
    ViewData["Title"] = "GetAllParameters";
}
<link rel="stylesheet" href="~/css/getAllPage.css">
@Html.Partial("_TempAlert")
<div class='container-fulid m-3'>
    <div class="row">
        <div class='col-sm-8'><h3>Parameters</h3></div>
        <div class='col-sm-4' style="text-align: right;"> <a class="btn btn-primary btn-sm" asp-action="CreateParameter">Create New Parameter</a></div>
    </div>
    <hr />
</div>
<div class="container">
    <table data-getAllTable class="col-md-10 col-md-offset2 table table-sm table-striped table-hover">
        <thead>
            <tr>
                <th>Sr. No.</th>
                <th>
                    @Html.DisplayNameFor(model => model.ParameterType.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TargetAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FinancialYear)
                </th>
                <th class="no-sort text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                var item = Model.ElementAt(i);
                <tr>
                    <td>
                        @($"{i + 1}")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParameterType.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TargetAmount)
                    </td>
                    <td>
                        @(item.StartDate.ToShortDateString())
                    </td>
                    <td>
                        @(item.EndDate.ToShortDateString())
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FinancialYear)
                    </td>
                    <td class="text-center">
                        <a asp-action="UpdateParameter" class="btn btn-outline btn--edit" asp-route-id="@item.Id">
                            <i class="fa-solid fa-pencil"></i>
                        </a>
                        <a class="btn btn-outline btn--delete" Onclick="DeleteParameter('@item.Id.ToString()')"><i class="fa-solid fa-trash"></i></a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script src="~/js/DeleteAlert.js" defer></script>
    <script src="~/js/datatableInit.js" defer></script>
}